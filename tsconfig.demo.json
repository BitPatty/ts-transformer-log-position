{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "declaration": false,
    "outDir": "demo",
    "removeComments": true,
    "plugins": [
      {
        "expressions": [
          "console.log",
          "console.warn",
          "globalLog",
          "this.log",
          "this.logger.log",
          "foo.log",
          "foo.console.log"
        ],
        "transform": "./src/index.ts",
        "split": true
      }
    ]
  },

  "include": ["demo/**/*"]
}
